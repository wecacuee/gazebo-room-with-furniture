<?xml version='1.0'?>
<%
require 'yaml'
MASS = 1
OBJFILENAME = ENV['IKEA_OBJ_FILENAME']
DIMS = YAML.load(ENV['IKEA_OBJ_DIMS'])
SCALE = YAML.load(ENV['IKEA_OBJ_SCALE'])
OBJFILEPARTS = OBJFILENAME.split(File::SEPARATOR)
IKEA_NAMES = OBJFILEPARTS.select { |e| e.start_with?("IKEA_") }
%>
<sdf version='1.0'>
  <model name='<%= IKEA_NAMES[0] %>'>
    <static>0</static>
    <link name='link_0'>
      <inertial>
        <mass><%= MASS %></mass>
        <inertia>
          <ixx><%= 0.83 * MASS * (DIMS[1]**2 + DIMS[2]**2) %></ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy><%= 0.83 * MASS * (DIMS[0]**2 + DIMS[2]**2) %></iyy>
          <iyz>0</iyz>
          <izz><%= 0.83 * MASS * (DIMS[0]**2 + DIMS[1]**2) %></izz>
        </inertia>
        <pose frame=''>0 0 0 0 -0 0</pose>
      </inertial>
      <pose frame=''>0 0 0 0 -0 0</pose>
      <visual name='visual'>
        <pose frame=''>0 0 0 1.58096 -0 0</pose>
        <geometry>
          <mesh>
            <uri>model://<%= OBJFILENAME %></uri>
            <scale><%= SCALE.join(" ") %></scale>
          </mesh>
        </geometry>
      </visual>
      <collision name='collision'>
        <pose frame=''>0 0 0 1.58096 -0 0</pose>
        <geometry>
          <mesh>
            <uri>model://<%= OBJFILENAME %></uri>
            <scale><%= SCALE.join(" ") %></scale>
          </mesh>
        </geometry>
      </collision>
    </link>
  </model>
</sdf>
